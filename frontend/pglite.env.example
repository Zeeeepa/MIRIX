# PGLite Configuration Example
# Copy this to .env in the frontend directory to enable PGLite mode
# Or set these environment variables before running the application

# Enable PGLite mode
MIRIX_USE_PGLITE=true

# PGLite bridge server configuration
MIRIX_PGLITE_BRIDGE_URL=http://127.0.0.1:8001

# Disable PostgreSQL URI to prevent fallback
MIRIX_PG_URI=

# Debug settings (optional)
MIRIX_DEBUG=true
MIRIX_LOG_LEVEL=DEBUG
DEBUG=true

# React development server port (if different from default)
PORT=3000

# Backend server configuration
BACKEND_PORT=8000
PGLITE_BRIDGE_PORT=8001 